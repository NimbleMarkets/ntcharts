    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Heatmap aoc2024",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/examples/heatmap/aoc2024/main.go",
            "args": [
                "${workspaceFolder}/examples/heatmap/aoc2024/4.txt",
                "XMAS"
            ]
        },
        {
            "name": "Debug Heatmap simple",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/examples/heatmap/simple/main.go"
        },
        {
            "name": "Attach ntchart-heatmap-perlin",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}/examples/heatmap/ntcharts-heatmap-perlin",
            "port": 2345,
            "host": "127.0.0.1",
            "preLaunchTask": "Run ntcharts-heatmap-perlin withheadless dlv"
        }
    ]
}